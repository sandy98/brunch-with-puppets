<div class="modal hide fade">
  <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h2></h2>
  </div>
  <div class="modal-body">
    <form class="form-vertical well well-shadow span4">
      <fieldset>
        <legend>User Data</legend>
        <label>Username</label>
        <input type="text" placeholder="username" id="txt-username" value="{{ username }}" />
        <label>Full Name</label>
        <input type="text" placeholder="full name" id="txt-fullname" value="{{ fullname }}" />
        <label>eMail</label>
        <input type="text" placeholder="email" id="txt-email" value="{{ email }}" />
      </fieldset>
    </form>
  </div>
  <div class="modal-footer">
      <a href="#" class="btn btn-cancel">Cancel</a>
      <a href="#" class="btn btn-primary btn-save">Save</a>
  </div>
</div>